component_showcase(
    H1("Heading 1"),
    H2("Heading 2"),
    H3("Heading 3"),
    H4("Heading 4"),
    H5("Heading 5"),
    H6("Heading 6"),
    code="""H1("Heading 1"),
H2("Heading 2"),
H3("Heading 3"),
H4("Heading 4"),
H5("Heading 5"),
H6("Heading 6"),""",
    id="headings"
)

